{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts", "../package.json"
  ]
}
